{
    "manifest_version": 3,
    "version": "1.0",
    "name": "CodeCopyButton",
    "description": "Add a code copy button to chat.openai.com",
    "permissions": ["activeTab", "scripting","tabs","storage"],
    "icons": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icons": {
        "16": "logo16.png",
        "48": "logo48.png",
        "128": "logo128.png"
      }
    },
    "content_security_policy": {
      "script-src": "self",
      "object-src": "self"
   },
    "background": {
      "service_worker": "background.js",
      "type": "module"
  },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  
  